<div class="profile-page u-flex-center u-f-direction-column">
    <div class="profile-page_header u-flex">
          {{> button-round
      type="button"
      modifier="secondary"
      ariaLabel="return"
      alt="iconBack"
     dataRoute="./profile.html"
  }}
    </div>
 

  <section class="profile-page__wrapper  u-f-direction-column ">
    <div class="profile-page__card">
       <div class="profile-page__header">
        {{> profile-card
          avatarSrc=avatarSrc
          name="firstName"
          lastName="lastName"
        }}
      </div>
{{! нужно потом изменить параметр required }}
      <form class="profile-page__form" name="profile">
        {{> input name="oldPassword" label="Old Password" type="password" placeholder="Old Password" autocomplete ="off" required=false }}
        {{> input name="newPassword" label="New Password" type="password" placeholder="New Password" autocomplete ="off" required=false }}
        {{> input name="newPassword" label="Confirm new Password" type="password" placeholder="Confirm New Password" autocomplete ="off" required=false }}

        

        <div class="profile-page__actions u-flex-center">
          {{> button  text="Save" type ='submit' modifier="primary" dataRoute="./profile.html"}}
        </div>
      </form>
    </div>
  </section>
</div>

