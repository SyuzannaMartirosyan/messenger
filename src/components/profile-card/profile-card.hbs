<div class="user-card">
  <div class="user-card__avatar u-flex-center">
    <img 
      src="{{avatarSrc}}" 
      alt="{{name}} {{lastName}}" 
      class="user-card__avatar-img"
      onerror="this.style.display='none'; this.parentElement.classList.add('user-card__avatar--empty');"
    >
  </div>
  <p class="user-card__name">{{name}} {{lastName}}</p>
</div>
